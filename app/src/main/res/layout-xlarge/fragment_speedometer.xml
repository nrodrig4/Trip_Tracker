<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DimGray"
    tools:context="com.example.nicrodriguez.seniordesign.Speedometer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:layout_weight="4">


            <LinearLayout
                android:id="@+id/LeftColumn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/SpeedometerSpeedLatView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/my_border"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/latitude"

                    android:textColor="@color/textColor"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/SpeedometerSpeedLonView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/my_border"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/longitude"
                    android:textColor="@color/textColor"
                    android:textSize="30sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/RightColumn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/distanceTraveledText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/my_border"
                    android:text="Distance Traveled: --"
                    android:textColor="@color/textColor"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/SpeedometerAccuracyView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/my_border"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/accuracy"

                    android:textColor="@color/textColor"
                    android:textColorLink="@color/background_color"
                    android:textSize="30sp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:id="@+id/SpeedometerSpeedView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:background="@drawable/my_border"

                android:gravity="center_vertical"
                android:text="@string/car_speed"
                android:textAlignment="textEnd"
                android:textColor="@color/textColor"
                android:textSize="150sp" />


            <TextView
                android:id="@+id/SpeedometerSpeedAverageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"


                android:background="@drawable/my_border"
                android:drawablePadding="10dp"
                android:text="@string/speed_average"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:textSize="50sp" />
<?ignore
            <TextView
                android:id="@+id/SpeedometerSpeedLimitView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"


                android:background="@drawable/my_border"
                android:drawablePadding="10dp"
                android:text="@string/speed_limit"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="50sp" />
    ?>

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
